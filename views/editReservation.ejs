    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var fromDateInput = document.getElementById('fromDate');
            var toDateInput = document.getElementById('toDate');
    
            var firstNight = '<%= reservations[0].first_night ? reservations[0].first_night.toISOString().slice(0, 10) : "" %>';
            var lastNight = '<%= reservations[0].last_night ? reservations[0].last_night.toISOString().slice(0, 10) : "" %>';

    
            if (firstNight) {
                fromDateInput.value = firstNight;
            }
    
            if (lastNight) {
                toDateInput.value = lastNight;
            }
